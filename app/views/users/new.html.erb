<div class="container">
  <h2>Sign up</h2>
  <% if @user.errors.any? %>
    <ol>
      <% @user.errors.full_messages.each do |msg|  %>
        <li><%= msg %></li>
      <% end %>
    </ol>
  <% end %>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :required => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, :require => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :required => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, :required => true, :class => 'form-control' %>
    </div>
    <div class="form-group"></div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :mobile %>
    <%= f.email_field :mobile, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :suburb %>
    <%= f.email_field :suburb, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.email_field :city, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :country %>
    <%= f.email_field :country, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :postcode %>
    <%= f.email_field :postcode, :class => 'form-control' %>
  </div>
  <%= f.submit "Sign Up", :class => "btn btn-primary"%>
<% end %>
</div>
